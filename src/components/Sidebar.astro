---
const { toc } = Astro.props;

---

<aside class="sidebar">
  <div class="sidebar-content">
    <h3>카테고리</h3>
    <nav>
      <ul>
        <li><a href="/">홈</a></li>
        <li><a href="/salmon-run/">연어런</a></li>
      </ul>
    </nav>

    <h3>목차</h3>
    <div class="toc-content">
      {{ toc }}
    </div>
  </div>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 2rem;
    width: 250px;
    padding: 0 1rem;
  }

  .sidebar-content h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .sidebar-content nav ul {
    list-style: none;
    padding: 0;
  }

  .sidebar-content nav li {
    margin-bottom: 0.25rem;
  }

  .sidebar-content nav a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .sidebar-content nav a:hover {
    text-decoration: underline;
  }

  .toc-content :global(h3) {
    margin-top: 1rem;
  }
</style>
