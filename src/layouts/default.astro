---
type: layout
---

<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/styles/custom.css">
</head>
<body>
  <main>
    <div class="content-wrapper">
      <article class="prose">
        <h1>{{ title }}</h1>
        <slot />
      </article>
      <aside class="toc">
        <h2>목차</h2>
        <ul>
          {{#each (toc) }}
          <li><a href="{{ href }}">{{ title }}</a></li>
          {{/each}}
        </ul>
      </aside>
    </div>
  </main>
</body>
</html>
